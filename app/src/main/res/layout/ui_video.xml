<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent"
              android:background="@color/comm_black" android:orientation="vertical">

    <include
        layout="@layout/comm_lay_toolbar" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_centerInParent="true"/>

            <MediaController
                android:id="@+id/mediaController" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" android:layout_marginBottom="20dip"/>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            style="@style/LoadingProgressBar"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>
