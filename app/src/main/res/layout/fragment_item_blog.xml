<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_list"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_blog_tag_recommend"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top|center|left"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_label_recommend" />

        <ImageView
            android:id="@+id/iv_item_blog_tag"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top|center"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:contentDescription="tag"
            android:src="@drawable/ic_label_originate" />

        <TextView
            android:id="@+id/tv_item_blog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginRight="16dp"
            android:gravity="top"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blog_title_text_color_light"
            android:textSize="16sp"
            tools:text="Large Text" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_blog_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="4dp"
        android:textSize="14sp"
        tools:text="New Text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_blog_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="left|center"
            android:lines="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/count_text_color_light"
            android:textSize="12sp"
            tools:text="2012-12-01 22:10" />

        <include layout="@layout/item_info_view_comment" />

    </LinearLayout>

    <View
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="1px"
        android:layout_marginTop="16dp"
        android:background="@color/list_divider_color" />

</LinearLayout>