<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent"
                android:background="#3b3b3b" android:fitsSystemWindows="false" android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layContainer"
        android:layout_width="match_parent" android:layout_height="match_parent"/>

    <View
        android:layout_width="match_parent" android:layout_height="150dip" android:background="@drawable/top_profile"/>

    <LinearLayout
        android:id="@+id/layToolbar"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <include
            layout="@layout/comm_lay_toolbar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>