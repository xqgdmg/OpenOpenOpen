<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yju.app">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".app.SHApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".shihui.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".shihui.main.MainActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".shihui.special.ValueSaleListActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".shihui.detail.ProductDetailsActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".shihui.estateservice.activity.EstateAddressActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".shihui.estateservice.activity.EstateCreateAddressActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".shihui.estateservice.activity.EstatePaymentActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>